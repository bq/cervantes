/*LibrarySearch
-------------------------*/
#searchLibraryItemCont{
min-width:570px;
max-width:570px;
min-height:55px;
max-height:55px;
background-color:#FFFFFF;
border: 1px solid #000000;
border-left:none;
border-right:none;
border-top:none;
}

#searchLibraryItemCont #itemCont{
background-color:#FFFFFF;
}
#searchLibraryItemCont #searchTitle{
font-size:16px;
font-weight:bold;
font-family: 'Lato', Arial, Helvetica, sans-serif;
}
#searchLibraryItemCont #resultNumber{
font-size:25px;
font-weight:bold;
}
#searchLibraryItemCont #searchAuthor{
font-family: 'Lato', Arial, Helvetica, sans-serif;
}
#clearSearchLineBtn{
min-height:35px;
max-height:35px;
min-width:43px;
max-width:43px;
background-repeat:no-repeat;
background-image: url(:/res/clear.png);
background-position:right;
border:none;
}

}

/*BookSummary
---------------------------------*/
#bqBookSummaryWhite{
background-color:#FFF;
}
#bookSummaryCont{
background-color:#FFF;
background-color:#FFFFFF;
border:2px solid #000000;
border-radius: 10px;
}
#bookSummaryCont #sectionTitle{
font-size:18px;
}
#bookSummaryCont #bookTitleCont{
min-height:53px;
max-height:53px;
background-color:#FFF;
border-bottom: 2px solid #C0C0C0;
}
#bookSummaryCont #coverLabel{
min-width:140px;
max-width:140px;
min-height:135px;
max-height:135px;
background-repeat:no-repeat;
background-position:top;
}
#bookSummaryCont #sinopsisLabel{
padding: 10px 0px;

}
#bookMainInfoCont, #topicCont, #editorCont, #languageCont, #idCont, #publishedCont{
border: 1px solid #FFFFFF;
border-top:none;
border-left:none;
border-right:none;
}
#bookSummaryCont #idCont{
border-bottom: none;
}
#bookSummaryCont #idCont #idValue{
font-family: 'Lato', Arial, Helvetica, sans-serif;
}
#bookSummaryCont #topicTitle, #bookSummaryCont #editorTitle, #bookSummaryCont #languageTitle, #bookSummaryCont #idTitle, #bookSummaryCont #publishedTitle{
font-weight:bold;
font-size:18px;
min-width:140px;
max-width:140px;
}
#bookTitleLabel{
margin:0px 0px 20px 0px;
font-family: 'Lato', Arial, Helvetica, sans-serif;
font-size:19px;
min-height:100px;
max-height:100px;
}
#bookSummaryCont #bookTitleLabel{
font-weight:bold;
}
#bookSummaryCont #authorLabel{
font-family: 'Lato', Arial, Helvetica, sans-serif;
font-size:18px;
}
#bookSummaryCont #lastRead,#bookSummaryCont #lastReadValue{
font-size:16px;
}
#bookSummaryCont #tabCont #summaryButton{
border: 2px solid #000;
background-color:#FFF;
border-top-left-radius:10px;
border-top-right-radius:10px;
border-bottom:none;
}
#bookSummaryCont #buyBookBtn{
padding:0px 10px;
color:#000;
text-transform:uppercase;
min-width:85px;
max-width:85px;
min-height:33px;
max-height:33px;
background-color:#FFF;
border: 1px solid #000;
border-radius: 4;
}

/* New library
------------------------*/
#ElfLibrary{
background-color:#FFFFFF;
}
#ElfLibrary #tabCont SilentQPushButton{
padding:0px 15px;
background-position:bottom center;
background-repeat:no-repeat;
}
#ElfLibrary #tabCont QPushButton{
padding:0px 15px;
background-position:bottom center;
background-repeat:no-repeat;
}
#ElfLibrary #tabCont #fnacEbooks{
min-width:150px;
max-width:150px;
background-image: url(:/res/tab-default.png);
}
#ElfLibrary #tabCont #myFiles{
min-width:150px;
max-width:150px;
background-image: url(:/res/tab-default.png);
}
#ElfLibrary #tabCont #allFiles{
min-width:90px;
max-width:90px;
background-image: url(:/res/tab-all-files.png);
}
#ElfLibrary #tabCont #updateButton{
padding:0px;
min-width:55px;
max-width:55px;
min-height:50px;
max-height:50px;
text-align:left;
background-repeat:no-repeat;
background-position:center center;
background-image: url(:/res/library_sync.png);
}
#ElfLibrary #tabCont #updateButton:pressed{
background-image: url(:/res/library_sync_pressed.jpg);
}

